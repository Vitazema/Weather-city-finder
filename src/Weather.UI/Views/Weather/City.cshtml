@model Weather.Domain.City

@{
  ViewData["Title"] = "City";
}

<div class="container">

  <div class="container">

    <div class="form-group col-md-offset-3 col-md-5">

      <h2>Прогноз температуры в выбранном городе</h2>

      <label asp-for="Name"></label>
      <span class="badge">@Model.Name</span>
      <br />
      
      @foreach (var temp in Model.Temperature)
      {
        <span class="badge">@temp.Date</span>
        <span class="badge">@temp.Air °C</span>
        <br />
      }
    </div>

  </div>

  <div class="container">

    <div class="form-group col-md-offset-3 col-md-5">

      <form method="get">
        <button asp-controller="Weather" asp-action="FindCity" class="btn btn-success">Назад</button>
      </form>

    </div>

  </div>

</div>