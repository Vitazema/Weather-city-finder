@model Weather.UI.Models.FindValidator

@{
  ViewData["Title"] = "Прогноз температуры";
}

<div class="container">

  <form method="post">

    <div class="container">
      <div class="form-group col-md-offset-3 col-md-5">
        <h2>Прогноз в городе</h2>
        <label asp-for="CityName" style="font-family: Arial"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
      </div>
    </div>
    <div class="container">
      <div class="form-group col-md-offset-3 col-md-5">
        <button asp-controller="Weather" asp-action="FindCity" class="btn btn-primary">Search</button>
      </div>
    </div>
  </form>

</div>